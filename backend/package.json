{
  "name": "marketplace-backend",
  "version": "1.0.0",
  "description": "Quickly marketplace backend API with Express.js",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "echo 'No build needed for JS'",
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest src/tests/integration --runInBand",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest src/tests/unit --runInBand",
    "test:all": "node src/tests/run-all-tests.js",
    "test:ci": "npm run test:setup && npm run test && npm run test:teardown",
    "test:setup": "npm run db:test:setup",
    "test:teardown": "npm run db:test:teardown",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node dist/scripts/seed.js",
    "db:reset": "prisma migrate reset --force",
    "db:test:setup": "NODE_ENV=test prisma migrate deploy",
    "db:test:teardown": "NODE_ENV=test prisma migrate reset --force --skip-seed",
    "db:test:reset": "NODE_ENV=test prisma db push --force-reset"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}